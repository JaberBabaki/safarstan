<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="center">
    <android.support.v7.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="#e7e7e7"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:gravity="center" android:background="#ffffff"
            >



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:orientation="vertical" >


                <com.ario.safarstan.customView.CustomTextView
                    android:id="@+id/txt_header_ostan"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center|right"
                    android:text=" درباره ما "
                    android:textColor="#000000"
                    android:textSize="18dip"
                    android:layout_marginRight="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_margin="8dip"
                android:orientation="vertical"
                android:layout_weight="1">


                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.ario.safarstan.customView.CustomTextView
                            android:id="@+id/txt_zearat"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="10dp"
                            android:text="برنامه سفرســتان کوششی است به منظور آشنایی هرچه بیشتر با جاذبه ها و فرهنگ کرمانشاه "
                            android:textColor="#616161"
                            android:textSize="13dp"/>
                        <com.ario.safarstan.customView.CustomTextView
                            android:id="@+id/txt_zearat2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="10dp"
                            android:text="طراح و برنامه نويس : سحر مراي "
                            android:textColor="#616161"
                            android:textSize="13dp"/>
                        <com.ario.safarstan.customView.CustomTextView
                            android:id="@+id/txt_zearat3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="10dp"
                            android:text=" @Miraculous94"
                            android:textColor="#616161"
                            android:textSize="13dp"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp" android:gravity="center" android:layout_margin="2dip"
                android:orientation="vertical"
                android:id="@+id/lay_eltemas">


                <com.ario.safarstan.customView.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/view7"
                    android:text=" بازگشت  "
                    android:textColor="#282828"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>