<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layoutDirection="ltr"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#21242B">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/lay_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.ario.safarstan.customView.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="پیام ها"
                        android:textColor="@android:color/background_light"
                        android:textSize="13dip"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="32dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/email"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_search1"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.ario.safarstan.customView.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="جستجو"
                        android:textColor="@android:color/background_light"
                        android:textSize="13dip"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="32dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/search"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.ario.safarstan.customView.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ارتباط با ما"
                        android:textColor="@android:color/background_light"
                        android:textSize="13dip"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVie۲۳w"
                        android:layout_width="32dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/contact"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_favorate"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.ario.safarstan.customView.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="مورد علاقه ها"
                        android:textColor="@android:color/background_light"
                        android:textSize="13dip"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="32dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/like"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_about"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.ario.safarstan.customView.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="درباره ما"
                        android:textColor="@android:color/background_light"
                        android:textSize="13dip"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVie12w1"
                        android:layout_width="32dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/info"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>